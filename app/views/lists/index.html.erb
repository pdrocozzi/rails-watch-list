<!-- Navbar -->
<div class="navbar-movie">
</div>

<div class="hero-banner">
  <div class="hero-content">
    <h1>Movie Listinha</h1>
  </div>
</div>

<div class="lists-section">
  <div class="container">
    <div class="lists-header">
      <h2>Listinhas</h2>
      <%= link_to "âž• Listinha", new_list_path, class: "btn btn-create" %>
    </div>

    <div class="lists-grid">
      <% @lists.each do |list| %>
        <%

          case list.name.downcase
          when "classic", "classic movies"
            card_class = "list-classic"
            bg_image = "https://images.unsplash.com/photo-1489599849927-2ee91cede3ba"
          when "superhero"
            bg_image = "https://i.imgur.com/P5GgZMJ.jpg"
          when "drama"
            bg_image = "https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
          when "comedy"
            bg_image = "https://images.unsplash.com/photo-1543584756-8f40a802e13f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
          else
            bg_image = "https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
          end
        %>

        <%= link_to list_path(list) do %>
          <div class="list-card <%= card_class %>">
            <img src="<%= bg_image %>" alt="<%= list.name %>">
            <div class="list-title"><%= list.name %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
