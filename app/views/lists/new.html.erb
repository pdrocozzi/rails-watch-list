<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h1 class="h4 mb-0">Create list</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @list, local: true) do |f| %>
            <% if @list.errors.any? %>
              <div class="alert alert-danger">
                <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
                <ul>
                  <% @list.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter a name for your list" %>
              <div class="form-text">Choose a unique name like "Drama", "Comedy", "To Rewatch", etc.</div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Create List", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= link_to "Back to lists", lists_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
